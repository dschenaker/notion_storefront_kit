name: NSK Sync & Deploy (v3)

on:
  workflow_dispatch: {}
  schedule:
    - cron: "15 3 * * *"   # 03:15 UTC daily

permissions:
  contents: write
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20

      - name: Install deps
        run: npm ci || npm i

      # simple, portable presence check (no bash [[ ... ]])
      - name: Check required secrets exist
        env:
          HAS_TOKEN: ${{ secrets.NOTION_TOKEN != '' }}
          HAS_DBID: ${{ secrets.NOTION_DB_ID != '' || secrets.NOTION_DB_URL != '' }}
          HAS_SETID: ${{ secrets.NOTION_SETTINGS_DB_ID != '' || secrets.NOTION_SETTINGS_DB_URL != '' }}
        run: |
          node -e "
            const ok = process.env.HAS_TOKEN==='true' && process.env.HAS_DBID==='true' && process.env.HAS_SETID==='true';
            console.log('NOTION_TOKEN:', process.env.HAS_TOKEN==='true' ? 'present' : 'MISSING');
            console.log('Products DB (ID or URL):', process.env.HAS_DBID==='true' ? 'present' : 'MISSING');
            console.log('Settings DB (ID or URL):', process.env.HAS_SETID==='true' ? 'present' : 'MISSING');
            if(!ok){ process.exit(1); }
          "

      - name: Notion → products.json
        env:
          NOTION_TOKEN: ${{ secrets.NOTION_TOKEN }}
          NOTION_DB_ID: ${{ secrets.NOTION_DB_ID }}
          NOTION_DB_URL: ${{ secrets.NOTION_DB_URL }}
        run: |
          set -euo pipefail
          node --unhandled-rejections=strict scripts/notion_sync.js
          echo "---- head data/products.json ----"
          head -n 40 data/products.json || true
          echo "---- media listing ----"
          ls -la assets/media || true

      - name: Notion → settings.json
        env:
          NOTION_TOKEN: ${{ secrets.NOTION_TOKEN }}
          NOTION_SETTINGS_DB_ID: ${{ secrets.NOTION_SETTINGS_DB_ID }}
          NOTION_SETTINGS_DB_URL: ${{ secrets.NOTION_SETTINGS_DB_URL }}
        run: |
          set -euo pipefail
          node --unhandled-rejections=strict scripts/settings_sync.js
          echo "---- head data/settings.json ----"
          head -n 40 data/settings.json || true
          echo "---- data dir ----"
          ls -la data

      - name: Stamp build time
        run: echo "$(date -u +'%Y-%m-%d %H:%M:%S') UTC" > data/last_sync.txt

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: ./

  deploy:
    needs: sync
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - id: deployment
        uses: actions/deploy-pages@v4
